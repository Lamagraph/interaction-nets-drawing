{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "nodes",
    "edges"
  ],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/node"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/edge"
      }
    }
  },
  "definitions": {
    "port": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "default": null
        }
      }
    },
    "node": {
      "type": "object",
      "required": [
        "id",
        "label",
        "auxiliaryPorts",
        "principalPort"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "auxiliaryPorts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/port"
          }
        },
        "principalPort": {
          "$ref": "#/definitions/port"
        }
      }
    },
    "edge": {
      "type": "object",
      "required": [
        "source",
        "target",
        "sourcePort",
        "targetPort"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "minLength": 1
        },
        "target": {
          "type": "string",
          "minLength": 1
        },
        "sourcePort": {
          "type": "string",
          "minLength": 1
        },
        "targetPort": {
          "type": "string",
          "minLength": 1
        },
        "activePair": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}